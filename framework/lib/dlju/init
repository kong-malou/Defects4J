#!/usr/bin/env bash

# Call exactly once from inside directory containing capture_junit.py and other scripts to set up

DLJU_DIR=`pwd`

export_command="export DLJU_DIR=$DLJU_DIR"
config_file=""
if [ -f "$HOME/.zshrc" ]; then
  config_file="$HOME/.zshrc"
elif [ -f "$HOME/.bash_profile" ]; then
  config_file="$HOME/.bash_profile"
elif [ -f "$HOME/.bashrc" ]; then
  config_file="$HOME/.bashrc"
else
  echo "Warning, could not find a .zshrc, a .bash_profile, or .bashrc file in $HOME. Please make one."
  exit 1
fi

echo $export_command >> $config_file
echo "export PATH=\$PATH:$DLJU_DIR/bin" >> $config_file
echo "Initialization successful."
echo "Use \"source $config_file\" to activate."
